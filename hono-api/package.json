{
	"name": "@travel-anchor/hono-api",
	"type": "module",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"default": null
		}
	},
	"imports": {
		"#shared/*": "./src/backend/shared/*",
		"#domains/*": "./src/backend/domains/*",
		"#middleware/*": "./src/backend/shared/middleware/*",
		"#utils/*": "./src/backend/shared/utils/*",
		"#database/*": "./src/backend/shared/database/*",
		"#database": "./src/backend/shared/database/index.ts",
		"#logger": "./src/backend/shared/utils/logger.ts"
	},
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"build": "rm -rf dist && tsc && bun build ./src/index.ts --outdir ./dist --target node --minify --sourcemap",
		"check": "tsc --noEmit",
		"start": "bun run ./dist/index.js",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"db:generate": "prisma generate"
	},
	"dependencies": {
		"@hono/zod-openapi": "^1.1.0",
		"@travel-anchor/data-access-layer": "workspace:",
		"hono": "catalog:",
		"winston": "^3.17.0",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@types/bun": "catalog:",
		"typescript": "catalog:"
	}
}
