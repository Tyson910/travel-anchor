{
	// Visit https://aka.ms/tsconfig to read more about this file
	"compilerOptions": {
		// File Layout
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": ".",
		// "paths": {
		// 	"#shared/*": ["./src/api/shared/*"],
		// 	"#domains/*": ["./src/api/domains/*"],
		// 	"#infrastructure/*": ["./src/api/shared/infrastructure/*"],
		// 	"#middleware/*": ["./src/api/shared/middleware/*"],
		// 	"#utils/*": ["./src/api/shared/utils/*"],
		// 	"#database/*": ["./src/api/shared/infrastructure/database/*"],
		// 	"#logger/*": ["./src/api/shared/infrastructure/logger/*"]
		// },

		"allowImportingTsExtensions": true,
		"noEmit": true,
		// Environment Settings
		// See also https://aka.ms/tsconfig/module
		"module": "preserve",
		"target": "esnext",
		// For nodejs:
		"lib": ["esnext"],

		// Other Outputs
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,

		// Stricter Typechecking Options
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,

		// Style Options
		"noImplicitReturns": true,
		// "noImplicitOverride": true,
		// "noFallthroughCasesInSwitch": true,

		// Recommended Options
		"strict": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"noUncheckedSideEffectImports": true,
		"moduleDetection": "force",
		"skipLibCheck": true
	}
}
