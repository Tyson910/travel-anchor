{
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte",
				"useTabs": true,
				"singleQuote": true,
				"trailingComma": "none",
				"printWidth": 100
			}
		},
		{
			"files": "*",
			"options": {
				"requirePragma": true
			}
		}
	],
	"tailwindStylesheet": "./src/app.css"
}
